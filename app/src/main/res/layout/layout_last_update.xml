<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/onSurface">

    <TextView
        android:id="@+id/lblLastUpdateDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="@string/last_update_date"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textAppearanceCaption11" />

    <TextView
        android:id="@+id/txtLastUpdateDate"
        app:layout_constraintEnd_toStartOf="@id/lblLastUpdateDate"
        app:layout_constraintTop_toTopOf="@id/lblLastUpdateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textAppearanceCaption11" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdate"
        style="?attr/borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:textColor="@color/red_500"
        android:textSize="@dimen/textAppearanceCaption12" />
</androidx.constraintlayout.widget.ConstraintLayout>