<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="18dp"
    android:paddingTop="5dp"
    android:paddingBottom="18dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_subdirectory" />

        <TextView
            android:id="@+id/lblUserPhoneNo"
            style="@style/LabelCaptionStyle"
            android:text="@string/number"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintEnd_toStartOf="@id/icon"/>

        <TextView
            android:id="@+id/txtUserPhoneNo"
            style="@style/TextCaptionStyle"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/lblUserPhoneNo"
            app:layout_constraintBottom_toBottomOf="@id/lblUserPhoneNo"
            app:layout_constraintEnd_toStartOf="@id/lblUserPhoneNo"/>

        <TextView
            android:id="@+id/lblUserPhoneModel"
            style="@style/LabelCaptionStyle"
            android:text="@string/phone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblUserPhoneNo"
            app:layout_constraintStart_toStartOf="@id/lblUserPhoneNo"/>

        <TextView
            android:id="@+id/txtUserPhoneModel"
            style="@style/TextCaptionStyle"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/lblUserPhoneModel"
            app:layout_constraintBottom_toBottomOf="@id/lblUserPhoneModel"
            app:layout_constraintEnd_toStartOf="@id/lblUserPhoneModel"/>
</androidx.constraintlayout.widget.ConstraintLayout>