<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textAppearanceSubtitle1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceSubtitle2</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
    </style>

    <style name="TextTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceSubtitle2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
    </style>

    <style name="LabelCaptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceCaption11</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextCaptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceCaption11</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
    </style>


    <style name="MaterialTextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textAppearanceButton</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textAppearanceSubtitle2</item>
    </style>

    <style name="progressBarWhite" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="progressBarBlack" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IconMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ItemMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textAppearanceSubtitle2</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/grey_500</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
</resources>
